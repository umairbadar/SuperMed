<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#e7e7e9">

    <TextView
        android:id="@+id/tv_dctr_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DR.ASIF IMAM"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/tv_hsptl_name"
        android:layout_below="@id/tv_dctr_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="South City"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="10dp"/>

    <TextView
        android:id="@+id/tv_qualification"
        android:layout_below="@id/tv_hsptl_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MBBS, DABIM, DABAI Consultant Allergist and Immunologist"
        android:textColor="#000000"
        android:textSize="20sp"
        android:paddingTop="10dp"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_below="@id/tv_qualification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="10dp"/>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_below="@id/textView1"
        android:layout_width="450dp"
        android:layout_height="200dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla lacinia sit amet ligula sit amet consequat. Etiam ut vulputate nunc, eget pulvinar ligula. Proin lacinia turpis quis magna condimentum, a suscipit ex vehicula."
        android:textColor="#000000"
        android:textSize="20sp"
        android:paddingTop="10dp"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_below="@id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tuesday and Thursday (4 PM to 6 PM)"
        android:textColor="#000000"
        android:textSize="20sp"
        android:paddingTop="10dp"/>

    <Button
        android:id="@+id/btn_close"
        android:layout_below="@id/tv_time"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Close"
        android:layout_gravity="bottom|right"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E9E9E9"
    android:orientation="vertical"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/product_bg"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D8D8D8" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="left"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="Meicine name 01"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tv_subcatname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="left"
                    android:padding="5dp"
                    android:text="Sub Cat"
                    android:textAllCaps="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato_bold"
                        android:padding="5dp"
                        android:text="50$"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:gravity="center|left"/>

                    <TextView
                        android:id="@+id/priceoff"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato_bold"
                        android:gravity="right|center"
                        android:padding="5dp"
                        android:text="50$ 33% off" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:background="@color/cartAmountSection" />

            <Button
                android:id="@+id/detail"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_product"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_shopping_cart"
                android:drawablePadding="5dp"
                android:paddingLeft="10dp"
                android:fontFamily="@font/lato_bold"
                android:text="Add To Cart"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
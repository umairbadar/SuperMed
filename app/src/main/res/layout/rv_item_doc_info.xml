<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/doc_details_sec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/change_password_bg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/docInformation_hospital"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:paddingRight="2dp"
                    android:paddingLeft="2dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/placeOrderText"
                    android:textSize="14dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/change_password_bg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/docInformation_qualifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:paddingRight="2dp"
                    android:paddingLeft="2dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/placeOrderText"
                    android:textSize="14dp"
                    android:alpha="0.7"/>
            </LinearLayout>
            <!--                    <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"
                                    android:layerType="software"
                                    android:src="@drawable/view_dotted" />-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/change_password_bg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/docInformation_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:paddingRight="2dp"
                    android:paddingLeft="2dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/placeOrderText"
                    android:alpha="0.7"
                    android:textSize="14dp" />
            </LinearLayout>
            <!--                    <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"
                                    android:layerType="software"
                                    android:src="@drawable/view_dotted" />-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/change_password_bg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/doc_fee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:paddingRight="2dp"
                    android:paddingLeft="2dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/placeOrderText"
                    android:alpha="0.7"
                    android:textSize="14dp" />
            </LinearLayout>
            <!--                    <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"
                                    android:layerType="software"
                                    android:src="@drawable/view_dotted" />-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/change_password_bg"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/docInformation_additional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:paddingRight="2dp"
                    android:paddingLeft="2dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/placeOrderText"
                    android:alpha="0.7"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginBottom="15dp"
        android:alpha="0.3"/>

</LinearLayout>